<div class="container">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <form class="form-horizontal" asp-action="Index">
                <div class="form-group">
                    <label class="control-label">Admin ID</label>
                    <input asp-for="Admin_id" class="form-control" type="text" />
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input asp-for="Ad_pass" class="form-control" type="password" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit"/>
                </div>
                <div class="form-group">
                    <p>New user?</p>
                    <a asp-for="Registration">Sign up</a>
                </div>
            </form>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>
@{ 
    if (TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]');
        </script>
    }
}
