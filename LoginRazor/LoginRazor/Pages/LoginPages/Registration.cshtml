@page
@model LoginRazor.Pages.LoginPages.RegistrationModel
@{
}
<br />
<h2>Registration For New User</h2>
<br />
<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Login.Id">Admin ID</label>
            </div>
            <div class="col-4">
                <input asp-for="Login.Id" class="form-control" />
            </div>
            <span asp-validation-for="Login.Id" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Login.Password">Password</label>
            </div>
            <div class="col-4">
                <input asp-for="Login.Password" class="form-control" type="password" />
            </div>
            <span asp-validation-for="Login.Password" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Login.ConfirmPassword">Confirm Password</label>
            </div>
            <div class="col-4">
                <input asp-for="Login.ConfirmPassword" class="form-control" type="password" />
            </div>
            <span asp-validation-for="Login.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Register" class="btn btn-primary form-control" />
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}